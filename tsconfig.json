{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@budget-plus/frontend/*": ["./apps/frontend/*"],
      "@budget-plus/api/*": ["./apps/api/*"],
      "@budget-plus/shared/*": ["./packages/shared/*"]
    }
  },
  "include": [
    "apps/frontend/**/*",
    "apps/api/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "apps/*/node_modules",
    "packages/*/node_modules",
    "apps/*/dist",
    "packages/*/dist"
  ]
}